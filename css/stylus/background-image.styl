
.background-image
    position: relative
    background-size: cover
    background-position: center
    // min-height: 100vh

    .opacity-layer
        opacity: .4

    .content
        min-height: 100vmin
        display: flex
        flex-direction: column
        justify-content: center
        align-items: flex-start;
        max-width: 520px

        h1
            color: $white
            font-size: 53px

        h2
            color: $white
            font-size: 42px
            line-height: 1.4

        p
            color: $white
            font-size: 25px
            line-height: 1.7
            margin-top: 36px

        a
            margin-top: 36px

        &.nr3
            p
                font-size: 20px

    .double-buttons
        margin-top: 0
        .behind
            margin-top: 12px

    @media(max-width: $media.small)
        .content
            max-width: 300px
            h1, h2
                font-size: 32px
            p
                font-size: 21px
                margin-top: 20px
            a
                margin-top: 20px
