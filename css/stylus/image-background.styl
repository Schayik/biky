
.background-image
    position: relative
    background-size: cover
    background-position: center
    height: 100vh

    .opacity-layer
        opacity: .4

    .content
        height: 100%
        display: flex
        flex-direction: column
        justify-content: center
        align-items: flex-start;
        max-width: 520px

        h1
            color: $white
            font-size: 42px
            line-height: 1.4

        p
            color: $white
            font-size: 25px
            line-height: 1.7

        a
            margin-top: 36px

        &.nr3
            p
                font-size: 20px
