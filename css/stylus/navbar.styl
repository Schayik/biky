
.navbar
    position: absolute
    z-index: 5
    width: 100vw
    .logo-and-background
        position: relative
        margin-top: 28px
        width: 84px
        .background
            position: absolute
            width: 400px
            height: 300px
            background-color: $white
            z-index: -1
            border-radius: 120px
            transform: rotate(20deg)
            bottom: 0
            right: -100px

    a
        img
            width: 84px

    &.green-background
        background-color: $green
        padding: 12px 0

